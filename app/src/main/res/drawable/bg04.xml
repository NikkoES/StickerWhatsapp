<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp"/>
                    <solid android:color="#ffec6408"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item android:top="5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp"/>
                    <solid android:color="#ffec6408"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="5dp"/>
                    <solid android:color="#ffca5404"/>
                </shape>
            </item>
            <item android:bottom="5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp"/>
                    <gradient android:startColor="#fffc882b"
                        android:angle="-90"
                        android:endColor="#ffec6408"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>